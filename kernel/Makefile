#
# Makefile for Sedna Kernel (GNU make)
#

PP = ..

include $(PP)/Makefile.include

all:
	@echo ===================================================================
	@echo Building Common
	@echo ===================================================================
	$(MAKE) -C common
	@echo ===================================================================
	@echo Building SM
	@echo ===================================================================
	$(MAKE) -C sm
	@echo ===================================================================
	@echo Building TR
	@echo ===================================================================
	$(MAKE) -C tr
	@echo ===================================================================
	@echo Building GOV
	@echo ===================================================================	
	$(MAKE) -C gov
	@echo ===================================================================
	@echo Kernel DONE
	@echo ===================================================================

clean:
	$(MAKE) -C common clean
	$(MAKE) -C sm clean
	$(MAKE) -C tr clean
	$(MAKE) -C gov clean

