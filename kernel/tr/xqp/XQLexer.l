#define YY_USER_ACTION \
{ \
    int last_endl = -1;\
    \
    yylloc->step();\
    for (int i = 0; i < yyleng; i++) \
        if (yytext[i] == '\n')  \
        { \
            yylloc->lines(1);\
            yylloc->end.column = 1;\
            last_endl = i;\
