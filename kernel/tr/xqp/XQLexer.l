    \
    yylloc->columns(yyleng - last_endl - 1);\
    \
    yylval->isUpper = 0; \
}

    /* needed to restore location on yyless; we just rescan buffer in this case */
#define AMEND_LOC_YYLESS \
{\
    int last_endl = -1;\
    \
    yylloc->end = yylloc->begin;\
    for (int i = 0; i < yyleng; i++) \
        if (yytext[i] == '\n')  \
