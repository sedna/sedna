#
# Makefile for rcv
#

PP = ../../..

include $(PP)/Makefile.include

all: rcv$(LIB_EXT)
	@echo ===================================================================
	@echo rcv DONE
	@echo ===================================================================

OBJS = rcv_funcs$(OBJ_EXT)

ifneq ($(findstring clean, $(MAKECMDGOALS)), clean)
include $(OBJS:$(OBJ_EXT)=.d)
endif

################################################################################
# rcv.lib                                                                      #
################################################################################
rcv$(LIB_EXT): $(OBJS)
	$(LB) $(LIBFLAGS) $(LIBOUT)$@ $^

################################################################################
# Clean                                                                        #
################################################################################
.PHONY: clean

clean: generic_clean
